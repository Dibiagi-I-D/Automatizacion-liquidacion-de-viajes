// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Chofer {
  id        String   @id @default(uuid())
  legajo    String   @unique
  interno   String
  gastos    Gasto[]
  createdAt DateTime @default(now())
}

model Gasto {
  id          String   @id @default(uuid())
  fecha       DateTime
  pais        String   // 'ARG' | 'CHL' | 'URY'
  tipo        String   // 'COMBUSTIBLE' | 'PEAJE' | 'NEUMATICO' | 'HONORARIO' | 'VIATICO' | 'OTRO'
  importe     Float
  descripcion String?
  paso        Int      // 1 o 2, calculado autom√°ticamente
  chofer      Chofer   @relation(fields: [choferId], references: [id], onDelete: Cascade)
  choferId    String
  createdAt   DateTime @default(now())

  @@index([choferId])
}
